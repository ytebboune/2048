<% var title = 'Formulaire login' %>
<% include head %>

<div class="container">
  <div class="row">
    <div class="signup-form" id="formContour" style="margin-top:15%;"><!--sign up form-->
      <h2 id="titleForm" style="text-align : center; margin-top: 50px;">Identification </h2>
      <form method="post" action="/loginVerif"></br>
        <input style="display: block; margin : auto; width:50%;" type="text" name="username" placeholder="Votre identifiant" required/>
        <br/>
        <input style="display: block; margin : auto; width:50%;" type="password" name="password" pattern="[A-Za-z0-9]{6,8}" placeholder="Votre mot de passe" required/>
        <br/><br/>
        <button id="buttonForm" style="display: block; margin : auto; margin-bottom: 50px; width:25%;" type="submit" value="Login" class="btn btn-default">Se connecter</button>
      </form>
    </div><!--/sign up form-->
  </div>
</div>
<% if (typeof error != 'undefined') { %>
<div class="error"><img width="25px" height="25px" style="margin-right: 30px;" src="../open-iconic-master/svg/warning.svg">
    <%= error %>
</div>
<% } %>
<% include foot %>