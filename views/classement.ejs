<% var title = 'Classement'; %>
<% include head %>
<br>
<h3 style="text-align:center;">Tous les classements sont disponibles ici !</h3>
<br><br>
<div class="limiter">
    <div class="container" style="width:50%;">
        <div class="table100 ver3 m-b-110">
            <div class="table100-head">
                <table>
                    <thead>
                    <tr class="row100 head">
                        <th class="cell100 column1" style="text-align:center; font-size:20px;">Classement global par
                            temps
                        </th>
                    </tr>
                    </thead>
                </table>
            </div>
            <div class="table100-body js-pscroll">
                <table>
                    <tbody>
                    <% classements[0].forEach(function(joueur){ %>
                    <tr class="row100 body">
                        <% if(joueur.recordCoups != null){ %>
                        <td class="cell100 column1">
                            <%= joueur.username %>
                        </td>
                        <td class="cell100 column2">
                            <%= joueur.recordDuree %> secondes
                        </td>
                        <!--
                        <td>
                            <form method="post" action="/supprimerDuClassement">
                                <input type="hidden" value="<%= joueur.username %>">
                                <p>
                                    <input type="submit" value="Supprimer pour triche">
                                </p>
                            </form>
                        </td>
                        -->
                        <% } %>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

